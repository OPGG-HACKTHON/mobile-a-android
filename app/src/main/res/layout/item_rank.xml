<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="data"
            type="com.opgg.chai.model.data.RankItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rank_item_layout"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_rank_profile"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="6dp"
                tools:src="@drawable/profile_sample"
                android:id="@+id/rank_profile_image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="58dp"
                android:layout_height="58dp"/>

            <TextView
                android:text="@{data.name}"
                style="@style/title1"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="12dp"
                tools:text="쪼렙이다말로하자"
                android:id="@+id/rank_profile_name"
                app:layout_constraintRight_toLeftOf="@id/rank_value"
                app:layout_constraintTop_toTopOf="@id/rank_profile_image"
                app:layout_constraintLeft_toRightOf="@id/rank_profile_image"
                app:layout_constraintBottom_toTopOf="@id/rank_profile_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="@{data.score}"
                style="@style/caption1"
                android:layout_marginEnd="16dp"
                android:id="@+id/rank_profile_score"
                app:layout_constraintRight_toLeftOf="@id/rank_value"
                app:layout_constraintTop_toBottomOf="@id/rank_profile_name"
                app:layout_constraintLeft_toLeftOf="@id/rank_profile_name"
                app:layout_constraintBottom_toBottomOf="@id/rank_profile_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Challenger 1,724 LP"/>

            <ImageView
                android:id="@+id/rank_arrow"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@{data.isRankUp ? @drawable/ic_rank_up_arrow : @drawable/ic_rank_down_arrow}"/>

            <TextView
                android:text="@{data.rank}"
                android:id="@+id/rank_value"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/rank_arrow"
                android:layout_width="wrap_content"
                tools:text="23"
                android:layout_height="wrap_content"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>