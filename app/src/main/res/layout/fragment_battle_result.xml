<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0"
        tools:context=".ui.main.battle.BattleResultFragment">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/fill_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/battle_total_guide" />

        <ImageButton
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_back_24"
            android:background="@color/fill_background"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/battle_total"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/battle_total_guide"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E9EBEE"
            android:layout_marginTop="43dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/round_rectangle"
            android:backgroundTint="@color/fill_background"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/battle_total_guide"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/total_profile_img_1"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="41dp"
                android:layout_marginEnd="41dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/profile_sample" />

            <TextView
                android:id="@+id/total_profile_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/fill_grey100"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_profile_img_1"
                tools:text="쪼렙이다 말로하자" />

            <TextView
                android:id="@+id/total_profile_school_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/fill_grey100"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_profile_name_1"
                tools:text="서초 고등학교" />

            <TextView
                android:id="@+id/total_profile_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/fill_grey100"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@drawable/round_rectangle"
                android:backgroundTint="@color/fill_pink"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_profile_school_1"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="솔킬의 달인" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="81dp"
            android:background="@drawable/ic_circle"
            android:gravity="center"
            android:text="VS"
            android:textAlignment="center"
            android:textColor="@color/fill_background"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@id/profile_2"
            app:layout_constraintStart_toEndOf="@id/profile_1"
            app:layout_constraintTop_toTopOf="@id/profile_1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/round_rectangle"
            android:backgroundTint="@color/fill_background"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/battle_total_guide"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/total_profile_img_2"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="41dp"
                android:layout_marginEnd="41dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/profile_sample" />

            <TextView
                android:id="@+id/total_profile_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/fill_grey100"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_profile_img_2"
                tools:text="쪼렙이다 말로하자" />

            <TextView
                android:id="@+id/total_profile_school_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/fill_grey100"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_profile_name_2"
                tools:text="서초 고등학교" />

            <TextView
                android:id="@+id/total_profile_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/fill_grey100"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@drawable/round_rectangle"
                android:backgroundTint="@color/fill_pink"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_profile_school_2"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="솔킬의 달인" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/profile_1_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rectangle"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:text="12sp"
            app:layout_constraintTop_toBottomOf="@id/profile_1"
            app:layout_constraintStart_toStartOf="@id/profile_1"
            app:layout_constraintEnd_toEndOf="@id/profile_1"
            tools:text="@string/battle_recent_win"
            tools:backgroundTint="@color/fill_blue"
            tools:textColor="@color/fill_background" />

        <TextView
            android:id="@+id/profile_2_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rectangle"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:text="12sp"
            app:layout_constraintTop_toBottomOf="@id/profile_2"
            app:layout_constraintStart_toStartOf="@id/profile_2"
            app:layout_constraintEnd_toEndOf="@id/profile_2"
            tools:text="@string/battle_recent_lost"
            tools:backgroundTint="@color/fill_background" />

        <View
            android:id="@+id/result_view_guide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/round_rectangle"
            android:backgroundTint="@color/fill_background"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/profile_1_result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/total_result_2"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/total_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/result_view_guide"
            app:layout_constraintEnd_toEndOf="@id/result_view_guide"
            app:layout_constraintTop_toTopOf="@id/result_view_guide"
            tools:itemCount="6"
            tools:listitem="@layout/item_battle_result" />

        <TextView
            android:id="@+id/total_result_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/fill_grey100"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="@id/result_view_guide"
            app:layout_constraintTop_toBottomOf="@id/total_result"
            app:layout_constraintEnd_toStartOf="@id/total_vs_guide_2"
            tools:text="3" />

        <TextView
            android:id="@+id/total_vs_guide_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_circle"
            android:gravity="center"
            android:text="VS"
            android:textAlignment="center"
            android:textColor="@color/fill_background"
            android:textSize="10sp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toStartOf="@id/total_result_2"
            app:layout_constraintStart_toEndOf="@id/total_result_1"
            app:layout_constraintTop_toTopOf="@id/total_result_1" />

        <TextView
            android:id="@+id/total_result_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/fill_grey100"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="@id/result_view_guide"
            app:layout_constraintTop_toBottomOf="@id/total_result"
            app:layout_constraintStart_toEndOf="@id/total_vs_guide_2"
            tools:text="2" />

        <Button
            android:id="@+id/battle_other_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/battle_with_other"
            android:textAlignment="center"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/total_result_1"
            app:layout_constraintEnd_toStartOf="@id/battle_real_btn"
            android:background="@drawable/round_rectangle_stroke_black" />

        <Button
            android:id="@+id/battle_real_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/battle_for_real"
            android:textAlignment="center"
            android:background="@drawable/round_rectangle_stroke_black"
            android:backgroundTint="@color/fill_blue"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintStart_toEndOf="@id/battle_other_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/total_result_1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>